<div class="max-w-3xl mx-auto">
   <h2 class="text-lg font-bold text-gray-800 mb-6 flex items-center gap-2">
     <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
     </svg>
     Family Reviews
   </h2>

   <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
     <% event.activity_ratings.each do |rating| %>
       <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow relative group">
          <div class="flex items-center gap-3 mb-3">
             <div class="h-10 w-10 rounded-full bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center text-white font-bold text-lg shadow-sm">
                <%= rating.user.name[0].upcase %>
             </div>
             <div>
                <div class="font-bold text-gray-900"><%= rating.user.name %></div>
                <div class="flex text-amber-400 text-sm">
                   <% 5.times do |i| %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 <%= i < rating.score ? 'fill-current' : 'text-gray-200 fill-current' %>" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                   <% end %>
                </div>
             </div>
          </div>
          
          <% if rating.note.present? %>
            <div class="relative bg-gray-50 rounded-lg p-3 text-gray-600 text-sm italic">
              "<%= rating.note %>"
              <div class="absolute -top-1 left-5 w-2 h-2 bg-gray-50 transform rotate-45"></div>
            </div>
          <% end %>
          
          <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity">
             <%= button_to activity_activity_rating_path(event, rating), method: :delete, class: "text-gray-400 hover:text-red-500 p-1" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
             <% end %>
          </div>
       </div>
     <% end %>
     
     <% if event.activity_ratings.empty? %>
       <div class="col-span-full text-center py-8 bg-white rounded-xl border border-dashed border-gray-300">
          <p class="text-gray-500">No reviews yet.</p>
       </div>
     <% end %>
   </div>

   <%# Add Rating Form %>
   <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-200">
     <div class="mb-4">
       <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Add your review</h3>
       <p class="text-xs text-gray-400 mt-1">Tap a star to rate this activity</p>
     </div>
     
     <%= form_with(model: [ event, ActivityRating.new ], url: activity_activity_ratings_path(event), class: "space-y-4") do |f| %>
       <div class="flex flex-col gap-4">
         
         <%# Star Rating %>
         <div class="flex flex-row-reverse justify-end items-center gap-1 group w-fit">
           <% 5.downto(1) do |i| %>
             <%= f.radio_button :score, i, id: "star-#{i}", class: "peer hidden" %>
             <label for="star-<%= i %>" class="cursor-pointer text-gray-300 peer-checked:text-amber-400 group-hover:peer-checked:text-gray-300 hover:text-amber-400 peer-hover:text-amber-400 transition-colors duration-100">
               <span class="sr-only"><%= i %> stars</span>
               <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 fill-current" viewBox="0 0 20 20">
                 <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
               </svg>
             </label>
           <% end %>
         </div>

         <%# Note %>
         <div class="relative">
           <%= f.label :note, "Your Review", class: "sr-only" %>
           <%= f.text_area :note, rows: 3, placeholder: "What did you think about this activity? (Optional)", class: "w-full rounded-xl border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 resize-none py-3 px-4 text-gray-700 placeholder:text-gray-400 text-sm" %>
         </div>

         <%# Submit %>
         <div class="flex justify-end">
           <%= f.submit "Post Review", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2.5 px-6 rounded-xl shadow-sm hover:shadow-md transition-all cursor-pointer text-sm" %>
         </div>
       </div>
     <% end %>
   </div>

</div>
