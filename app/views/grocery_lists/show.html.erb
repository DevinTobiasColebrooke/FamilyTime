<div class="max-w-3xl mx-auto px-4 sm:px-6 py-12 font-sans text-gray-900">
  <%# Header Section %>
  <div class="flex justify-between items-end mb-10 border-b-2 border-gray-100 pb-6">
    <div>
      <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-gray-900">Grocery List</h1>
      <p class="mt-2 text-lg text-gray-500 font-medium">Weekly shopping essentials</p>
    </div>
    <button onclick="window.print()" class="group flex items-center gap-2 px-5 py-2.5 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-all shadow-sm hover:shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 print:hidden">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 group-hover:scale-105 transition-transform">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6.72 13.829c-.24.03-.48.062-.72.096m.72-.096a42.415 42.415 0 0110.56 0m-10.56 0L6.34 18m10.94-4.171c.24.03.48.062.72.096m-.72-.096L17.66 18m0 0l.229 2.523a1.125 1.125 0 01-1.12 1.227H7.231c-.662 0-1.18-.568-1.12-1.227L6.34 18m11.318 0h1.091A2.25 2.25 0 0021 15.75V9.456c0-1.081-.768-2.015-1.837-2.175a48.055 48.055 0 00-1.913-.247M6.34 18H5.25A2.25 2.25 0 013 15.75V9.456c0-1.081.768-2.015 1.837-2.175a48.041 48.041 0 011.913-.247m10.5 0a48.536 48.536 0 00-10.5 0m10.5 0V3.375c0-.621-.504-1.125-1.125-1.125h-8.25c-.621 0-1.125.504-1.125 1.125v3.659M18 10.5h.008v.008H18V10.5zm-3 0h.008v.008H15V10.5z" />
      </svg>
      <span class="font-semibold">Print List</span>
    </button>
  </div>

  <% if @items.any? %>
    <div class="space-y-8">
      <% @items.each do |meal, items| %>
        <%# Meal Card %>
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden hover:shadow-md transition-shadow duration-300 relative group">
          <%# Left Accent Border %>
          <div class="absolute left-0 top-0 bottom-0 w-1.5 bg-emerald-500"></div>
          
          <div class="p-6 pl-8">
            <%# Card Header %>
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-6 gap-2">
              <h2 class="text-2xl font-bold text-gray-800 leading-tight group-hover:text-emerald-700 transition-colors">
                <%= meal.title %>
              </h2>
              
              <%# Date Badge %>
              <div class="flex items-center gap-2 px-3 py-1.5 bg-gray-50 text-gray-600 rounded-full border border-gray-100 text-sm font-medium whitespace-nowrap">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <%= meal.start_time.strftime("%A, %b %d") %>
              </div>
            </div>
            
            <%# Checklist %>
            <ul class="space-y-3">
              <% items.each do |item| %>
                <li class="group/item flex items-start">
                  <div class="flex items-center h-6">
                    <input type="checkbox" id="item_<%= item.id %>" 
                           class="peer h-5 w-5 text-emerald-600 focus:ring-emerald-500 border-gray-300 rounded cursor-pointer transition-all duration-200 checked:bg-emerald-500 checked:border-transparent">
                  </div>
                  <label for="item_<%= item.id %>" class="ml-3 text-lg text-gray-700 cursor-pointer select-none peer-checked:text-gray-400 peer-checked:line-through transition-all duration-200 flex-1">
                    <span class="<%= 'italic text-gray-500' if item.status == 'proposed' %>">
                      <%= item.name %>
                    </span>
                    
                    <% if item.note.present? %>
                      <span class="block text-sm text-gray-500 mt-0.5 peer-checked:text-gray-300">
                         Note: <%= item.note %>
                      </span>
                    <% end %>
                  </label>

                  <% if item.status == 'proposed' %>
                    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-amber-100 text-amber-700 border border-amber-200 uppercase tracking-wide">
                      Proposed
                    </span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <%# Empty State %>
    <div class="text-center py-20 px-4 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-200">
      <div class="text-6xl mb-4">ðŸ¥—</div>
      <h3 class="text-2xl font-bold text-gray-900 mb-2">Your grocery list is empty</h3>
      <p class="text-gray-500 mb-8 max-w-md mx-auto">It looks like you haven't planned any meals yet. Start planning your week to generate your shopping list automatically.</p>
      <%= link_to new_event_path(type: 'Meal'), class: "inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-emerald-600 hover:bg-emerald-700 shadow-sm hover:shadow-lg transition-all duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Plan a Meal
      <% end %>
    </div>
  <% end %>
</div>
